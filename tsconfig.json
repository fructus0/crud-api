    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "es6",
    "outDir": "dist",
    "baseUrl": "./src",
    "alwaysStrict": true,
    "strict": true,
    "rootDir": "src",
    "allowJs": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
